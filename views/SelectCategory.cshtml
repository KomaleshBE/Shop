@model IEnumerable<WebAppCore.Models.Category>

@{
    ViewData["Title"] = "SelectCategory";
}

<h1>SelectCategory</h1>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.imagePath)
        </th>
        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>

            <td>
                <img src="@Url.Content(item.imagePath)" width="150px" height="150px" />
            </td>

            <td>
                @Html.ActionLink("Select Food ","SelectedProducts","Products", new { cid=item.id },null)
            </td>
        </tr>
    }

</table>
